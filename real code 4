def c_to_f(celsius):
    fahrenheit = (celsius*9/5)+32
    return fahrenheit

def f_to_c(fah):
    celsius = (fah - 32) * 5/9
    return celsius 

#temp = f_to_c(100)
#print(temp)

userin = input("What temperature do you have to convert from? (Type 'C' if you have a celsius value and 'F' if you have a fahrenheit value.)")
temp = input("What is the temperature in that unit?")    
if userin.upper() == "C":
    print(f"The temperature in fahrenheit is {c_to_f(temp)}.")
if userin.upper() == "F":
    print(f"The temperaure in celsius is {f_to_c(temp)}.")
    
        
    
